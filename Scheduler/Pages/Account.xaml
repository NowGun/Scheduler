<Page
    x:Class="Scheduler.Pages.Account"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Scheduler.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="Account"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    Style="{DynamicResource UiPageScrollable}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel
            Margin="20,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Label Content="Добро пожаловать, " FontSize="18" />
            <Label
                x:Name="LabelName"
                Content="Жиров Даниил"
                FontSize="18" />
        </StackPanel>
        <wpfui:Button
            x:Name="ButtonExit"
            Width="150"
            Height="35"
            Margin="0,14,20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Appearance="Secondary"
            Click="ButtonExit_Click"
            Content="Выйти"
            FontSize="18" />
        <StackPanel Margin="0,60,0,0" VerticalAlignment="Top">
            <wpfui:CardExpander
                Margin="20,0,20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                FontSize="16"
                Header="Личная информация"
                IsExpanded="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.ColumnSpan="1"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top">
                        <Label Content="Фамилия" FontSize="18" />
                        <wpfui:TextBox
                            x:Name="TextBoxSurname"
                            Height="40"
                            FontSize="18" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top">
                        <Label Content="Имя" FontSize="18" />
                        <wpfui:TextBox
                            x:Name="TextBoxName"
                            Height="40"
                            FontSize="18" />
                    </StackPanel>


                    <wpfui:Button
                        x:Name="ButtonUpdateName"
                        Grid.Column="1"
                        Width="150"
                        Height="40"
                        Margin="0,75,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Appearance="Secondary"
                        Click="ButtonUpdateName_Click"
                        Content="Обновить"
                        FontSize="18" />
                </Grid>
            </wpfui:CardExpander>
            <wpfui:CardExpander
                Margin="20,20,20,0"
                FontSize="16"
                Header="Безопасность"
                IsExpanded="False">
                <StackPanel VerticalAlignment="Top">
                    <wpfui:Card VerticalAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.ColumnSpan="1"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">
                                <Label Content="Ваш текущий пароль" FontSize="18" />
                                <wpfui:PasswordBox
                                    x:Name="PasswordBoxOldPass"
                                    Height="40"
                                    FontSize="18" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">
                                <Label Content="Новый пароль" FontSize="18" />
                                <wpfui:PasswordBox
                                    x:Name="PasswordBoxNewPass"
                                    Height="40"
                                    FontSize="18" />
                            </StackPanel>


                            <wpfui:Button
                                x:Name="ButtonUpdatePass"
                                Grid.Column="1"
                                Width="200"
                                Height="40"
                                Margin="0,75,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Appearance="Secondary"
                                Click="ButtonUpdatePass_Click"
                                Content="Обновить пароль"
                                FontSize="18" />
                        </Grid>
                    </wpfui:Card>
                    <wpfui:Card Margin="0,20,0,0" VerticalAlignment="Stretch">
                        <Grid>
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                <Label
                                    x:Name="LabelMail"
                                    Content="Текущая почта: "
                                    FontSize="18" />
                                <wpfui:TextBox
                                    x:Name="TextBoxMail"
                                    Height="40"
                                    HorizontalAlignment="Stretch"
                                    FontSize="18"
                                    Placeholder="Введите новую почту" />
                            </StackPanel>
                            <wpfui:Button
                                x:Name="ButtonUpdateMail"
                                Width="275"
                                Height="40"
                                Margin="0,75,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Appearance="Secondary"
                                Click="ButtonUpdateMail_Click"
                                Content="Обновить почтовый аккаунт"
                                FontSize="18" />
                        </Grid>
                    </wpfui:Card>
                    <wpfui:Card Margin="0,20,0,0" VerticalAlignment="Stretch">
                        <Grid>
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                <Label
                                    x:Name="LabelPhone"
                                    Content="Текущий номер телефона: "
                                    FontSize="18" />
                                <wpfui:TextBox
                                    x:Name="TextBoxPhone"
                                    Height="40"
                                    HorizontalAlignment="Stretch"
                                    FontSize="18"
                                    Placeholder="Введите новый телефон" />
                            </StackPanel>
                            <wpfui:Button
                                x:Name="TextBoxUpdatePhone"
                                Width="275"
                                Height="40"
                                Margin="0,75,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Appearance="Secondary"
                                Click="TextBoxUpdatePhone_Click"
                                Content="Обновить номер телефона"
                                FontSize="18" />
                        </Grid>
                    </wpfui:Card>
                </StackPanel>
            </wpfui:CardExpander>
        </StackPanel>


    </Grid>
</Page>
