<Page
    x:Class="WPFUI.Demo.Views.Pages.Buttons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFUI.Demo.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="Buttons"
    d:DesignHeight="850"
    d:DesignWidth="800"
    Style="{StaticResource UiPageScrollable}"
    mc:Ignorable="d">

    <VirtualizingStackPanel
        Margin="18,0,18,18"
        IsVirtualizing="True"
        VirtualizationMode="Recycling">
        <TextBlock
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="WPF UI both adds new button types and edits the defaults available in Windows Presentation Foundation. A few examples below show the use of different types of buttons."
            TextWrapping="WrapWithOverflow" />

        <wpfui:CardAction
            Margin="0,24,0,0"
            Click="ButtonMore_OnClick"
            Icon="TextParagraph24">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,4"
                    FontWeight="Medium"
                    Text="ToggleButton &amp; ToggleSwitch" />
                <TextBlock
                    FontSize="11"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Text="Check out more buttons on the Input page." />
            </StackPanel>
        </wpfui:CardAction>

        <TextBlock
            Margin="0,24,0,0"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="Default Button" />
        <Button Margin="0,8,0,0" Content="Button" />
        <wpfui:CodeBlock Margin="0,8,0,0">
            &lt;Button Content=&quot;Button&quot; /&gt;
        </wpfui:CodeBlock>

        <TextBlock
            Margin="0,24,0,0"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="WPF UI Button" />
        <wpfui:Button
            Margin="0,8,0,0"
            Content="WPF UI Button"
            Icon="Fluent24" />
        <wpfui:CodeBlock Margin="0,8,0,0">
            &lt;wpfui:Button Icon=&quot;Fluent24&quot; Content=&quot;WPF UI Button&quot; /&gt;
        </wpfui:CodeBlock>

        <TextBlock
            Margin="0,24,0,0"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="WPF UI Button with Icon only" />
        <Grid Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <wpfui:Button
                Grid.Column="0"
                Margin="0,0,4,0"
                Appearance="Primary"
                FontSize="16"
                Icon="Fluent24" />
            <wpfui:Button
                Grid.Column="1"
                Margin="4,0,4,0"
                Appearance="Secondary"
                FontSize="16"
                Icon="FolderAdd24" />
            <wpfui:Button
                Grid.Column="2"
                Margin="4,0,4,0"
                Appearance="Transparent"
                FontSize="16"
                Icon="Gift24" />
            <wpfui:Button
                Grid.Column="3"
                Margin="4,0,0,0"
                Padding="6"
                Appearance="Success"
                FontSize="16"
                Icon="Food24" />
        </Grid>
        <wpfui:CodeBlock Margin="0,8,0,0">
            &lt;wpfui:Button Padding=&quot;6&quot; Icon=&quot;Fluent24&quot; Appearance=&quot;Secondary&quot; FontSize=&quot;16&quot; /&gt;
        </wpfui:CodeBlock>

        <TextBlock
            Margin="0,24,0,0"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="WPF UI Button Appearance" />
        <Grid Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <wpfui:Button
                Grid.Column="0"
                Margin="0,0,4,0"
                Appearance="Primary"
                Content="Primary" />
            <wpfui:Button
                Grid.Column="1"
                Margin="4,0,4,0"
                Appearance="Secondary"
                Content="Secondary" />
            <wpfui:Button
                Grid.Column="2"
                Margin="4,0,4,0"
                Appearance="Dark"
                Content="Dark" />
            <wpfui:Button
                Grid.Column="3"
                Margin="4,0,4,0"
                Appearance="Light"
                Content="Light" />
            <wpfui:Button
                Grid.Column="4"
                Margin="4,0,4,0"
                Appearance="Success"
                Content="Success" />
            <wpfui:Button
                Grid.Column="5"
                Margin="4,0,4,0"
                Appearance="Caution"
                Content="Caution" />
            <wpfui:Button
                Grid.Column="6"
                Margin="4,0,4,0"
                Appearance="Danger"
                Content="Danger" />
            <wpfui:Button
                Grid.Column="7"
                Margin="4,0,0,0"
                Appearance="Transparent"
                Content="Transparent" />
        </Grid>
        <wpfui:CodeBlock Margin="0,8,0,0">
            &lt;wpfui:Button Appearance=&quot;Secondary&quot; /&gt;
        </wpfui:CodeBlock>

    </VirtualizingStackPanel>
</Page>
